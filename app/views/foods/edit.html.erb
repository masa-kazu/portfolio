<h1 class="col-3">食品編集</h1>

<%= form_with(model: @food, local: true) do |f| %>
<div class="field col-3">
  <%= f.label :title, "食品名" %><br>
  <%= f.text_field :title %>
</div>
<div class="field col-3">
  <%= f.label :content, "詳細" %><br>
  <%= f.text_area :content %>
</div>

<div class="actions col-3">
  <%= f.submit "編集", class: "btn btn-primary" %>
</div>
<% end %>