<% breadcrumb :food_edit %>
<h1>食品編集</h1>



<%= form_with(model: @food, local: true) do |f| %>
<div class="field">
  <%= f.label :title, "食品名" %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :content, "詳細" %><br>
  <%= f.text_area :content %>
</div>
<div class="field">
  <%= f.label :time, "賞味期限" %><br>
  <%= f.date_field :time %>
</div>
<div class="field">
  <%= f.label :food_image, "食品画像" %><br>
  <%= image_tag @food.food_image.url if @food.food_image? %>
  <%= f.file_field :food_image %>
</div>

<div class="actions">
  <%= button_tag(type: "submit",class: "btn btn-info") do %>
    <i class="fas fa-check"></i>
  <% end %>
</div>
<% end %>

<div class="actions">
  <%= link_to :back, class: "btn btn-outline-secondary btn-sm" do %>
    <i class="fas fa-long-arrow-alt-left"></i>
  <% end %>
</div>