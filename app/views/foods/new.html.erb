<% breadcrumb :food_add %>
<h1>食品新規作成</h1>



<%= form_with(model: @food, local: true) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
<div class="field">
  <%= f.label :title, "食品名" %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :content, "詳細" %><br>
  <%= f.text_area :content %>
</div>
<div class="field">
  <%= f.label :time, "賞味期限" %><br>
  <%= f.date_field :time %>
</div>
<div class="field">
  <%= f.label :food_image, "食品画像" %><br>
  <%= f.file_field :food_image %>
</div>

<div class="actions">
  <%= f.submit "追加", class: "btn btn-primary border border-white",style: "background-color: #cd853f;" %>
</div>

<div class="actions">
  <%= link_to '戻る', foods_path, class: "btn btn-outline-secondary btn-sm" %>
</div>
<% end %>