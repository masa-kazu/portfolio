<div class="user-container-head">
  <h1>ユーザー情報</h1>
  <div class="actions">
    <%= link_to 'ユーザー情報編集', edit_user_registration_path,class: "btn btn-primary border border-white",style: "background-color: #cd853f;" %>
  </div>
</div>

<h3>ユーザー名</h3>
  <div class="user-field">
    <%= @user.name %>
  </div>
<h3>メールアドレス</h3>
  <div class="user-field">
    <%= @user.email %>
  </div>
<h3>プロフィール</h3>
  <div class="user-field">
    <%= @user.profile%>
  </div>
<h3>プロフィール画像</h3>
  <div class="user-field">
    <% if @user.profile_image? %>
      <%= image_tag @user.profile_image.url %>
    <% else %>
      <%= image_tag("default.png") %>
    <% end %>
  </div>

<div class="actions">
  <%= link_to '戻る', :back, class: "btn btn-outline-secondary btn-sm" %>
</div>