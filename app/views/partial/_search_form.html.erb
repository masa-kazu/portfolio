<%= search_form_for @q, url: search_foods_path do |f| %>
  <div class="input-group">
    <%= f.text_field :title_cont, placeholder: "食品名で検索...",class: 'form-control' %>
    <span class="input-group-btn">
      <%= button_tag(type: "submit",class: "btn btn-primary btn-lg border border-white",style: "background-color: #cd853f;") do %>
        <i class="fas fa-search"></i>
      <% end %>
    </span>
  </div>
<% end %>